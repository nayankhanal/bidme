<!-- Active Auctions Preview -->
<section class="active-auctions">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Live Auctions Right Now</h2>
            <p class="section-description">Join the action and place your bids</p>
        </div>

        <div class="auctions-grid">
            <% 
            const sampleAuctions = [
                { id: 1, title: "Vintage Rolex Submariner", currentBid: 8500, endTime: "2h 34m", bids: 47, image: "watch", live: true },
                { id: 2, title: "MacBook Pro M3 Max", currentBid: 2100, endTime: "5h 12m", bids: 23, image: "laptop", live: true },
                { id: 3, title: "Nike Air Jordan 1 Retro", currentBid: 450, endTime: "1h 08m", bids: 89, image: "sneakers", live: true },
                { id: 4, title: "Canon EOS R5 Camera", currentBid: 3200, endTime: "3h 45m", bids: 34, image: "camera", live: false },
                { id: 5, title: "Original Banksy Print", currentBid: 12000, endTime: "6h 20m", bids: 15, image: "art", live: true },
                { id: 6, title: "PlayStation 5 Bundle", currentBid: 680, endTime: "4h 52m", bids: 102, image: "gaming", live: false }
            ];
            %>

                <% sampleAuctions.forEach(auction => { %>
                    <div class="auction-card">
                        <% if (auction.live) { %>
                            <div class="auction-badge">
                                <span class="pulse-dot"></span> LIVE
                            </div>
                            <% } %>

                                <div class="auction-image">
                                    <div class="placeholder-image <%= auction.image %>">
                                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                            <circle cx="8.5" cy="8.5" r="1.5"/>
                            <polyline points="21 15 16 10 5 21"/>
                        </svg>
                                    </div>
                                </div>

                                <div class="auction-content">
                                    <h3 class="auction-title">
                                        <%= auction.title %>
                                    </h3>

                                    <div class="auction-info">
                                        <div class="info-group">
                                            <span class="info-label">Current Bid</span>
                                            <span class="info-value price">$<%= auction.currentBid.toLocaleString() %></span>
                                        </div>
                                        <div class="info-group">
                                            <span class="info-label">Ends In</span>
                                            <span class="info-value time"><%= auction.endTime %></span>
                                        </div>
                                    </div>

                                    <div class="auction-meta">
                                        <span class="bid-count">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
                                <circle cx="9" cy="7" r="4"/>
                                <path d="M23 21v-2a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75"/>
                            </svg>
                            <%= auction.bids %> bids
                        </span>
                                    </div>

                                    <div class="auction-actions">
                                        <a href="/auction/<%= auction.id %>" class="btn btn-primary btn-block">Place Bid</a>
                                        <a href="/auction/<%= auction.id %>" class="btn btn-outline btn-sm">View Details</a>
                                    </div>
                                </div>
                    </div>
                    <% }); %>
        </div>

        <div class="section-cta">
            <a href="/auctions" class="btn btn-secondary btn-lg">
                View All Auctions
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
    </div>
</section>

